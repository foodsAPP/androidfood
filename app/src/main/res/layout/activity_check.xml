            android:id="@+id/cbit_commentoneblock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbit_commenttext">

            <ImageView
                android:id="@+id/cbit_commentuserimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_head" />

            <TextView
                android:id="@+id/cbit_commentusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="用户名"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/cbit_commentuserimg"
                app:layout_constraintTop_toTopOf="@+id/cbit_commentuserimg" />

            <TextView
                android:id="@+id/cbit_commenttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="0000_00_00"
                android:textColor="#000000"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/cbit_commentusername"
                app:layout_constraintTop_toBottomOf="@+id/cbit_commentusername" />

            <ImageView
                android:id="@+id/cbit_commnetthmub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/cbit_commentthmubnum"
                app:layout_constraintEnd_toStartOf="@+id/cbit_commentthmubnum"
                app:layout_constraintTop_toTopOf="@+id/cbit_commentthmubnum"
                app:srcCompat="@drawable/ic_thumb_up_black_24dp" />

            <TextView
                android:id="@+id/cbit_commentthmubnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/cbit_commentthumbtext"
                app:layout_constraintTop_toTopOf="@+id/cbit_commentthumbtext" />

            <TextView
                android:id="@+id/cbit_commentthumbtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="点赞"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cbit_commentcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="具体评论内容"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cbit_commenttime"
                app:layout_constraintTop_toBottomOf="@+id/cbit_commenttime" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>